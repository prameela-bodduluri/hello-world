<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>dbt__Project_and_Activity_validation</fullName>
    <active>true</active>
    <description>Project and Activity are required for Attendance</description>
    <errorConditionFormula>AND(
ISPICKVAL( dbt__Type__c , &apos;Attendance&apos;),
				 OR(ISBLANK(dbt__Project__c),
								ISPICKVAL(dbt__Activity__c, &quot;&quot;)
							)
)</errorConditionFormula>
    <errorMessage>Both Project and Activity are required for Attendance</errorMessage>
</ValidationRule>
