<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>dbt__Employee__c</field>
        <field>dbt__Start_Date__c</field>
        <field>dbt__End_Date__c</field>
        <field>dbt__Billable_Hours__c</field>
        <field>dbt__Non_Billable_Hours__c</field>
        <field>dbt__Absence_Hours__c</field>
        <field>dbt__Total_Hours__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>dbt__Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <label>Manager Approval</label>
        <name>Manager_Approval</name>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>dbt__Timesheet__c.dbt__Met_Weekly_Hours__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>dbt__Update_Status_Field_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Timesheet_Approved_Email_Alert</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>dbt__Update_Status_Field_to_New</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Timesheet_Reject_Email_Alert</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>dbt__Update_Status_Field_to_Submitted</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Timesheet Approval Process</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>dbt__Update_Status_Field_to_New</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
